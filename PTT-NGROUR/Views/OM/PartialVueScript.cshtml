<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="https://cdn.jsdelivr.net/npm/lodash@4.17.11/lodash.min.js"></script>
<script type="text/javascript">
    var vueSummary = new Vue({
        el: '#app',
        data: {
            PipelineActivity: null,
            Year: null,
            Month: null,
            pipeline: null,
            isLoading: false
        },
        computed: {
            currentMonthText() {
                var date = new Date();
                date.setFullYear(this.Year, this.Month - 1)
                return date.toLocaleDateString('en-US', {
                    month: 'long'
                })
            },
            summary() {
                if (this.pipeline) {
                    return this.Month === 0 ? this.pipeline.Summary.Accumulate : this.pipeline.Summary.Current
                }
                return null
            }
        },
        methods: {
            getPMActivity(activities, pm_id, key) {
                var data = _.find(activities, ['PM_ID', pm_id])
                return data ? data[key] : '-'
            },
            hexToRgbA(hex, alpha) {
                var c;
                if (/^#([A-Fa-f0-9]{3}){1,2}$/.test(hex)) {
                    c = hex.substring(1).split('');
                    if (c.length == 3) {
                        c = [c[0], c[0], c[1], c[1], c[2], c[2]];
                    }
                    c = '0x' + c.join('');
                    return 'rgba(' + [(c >> 16) & 255, (c >> 8) & 255, c & 255].join(',') + ', ' + alpha + ')';
                }
                return null;
            },
            getBackgroundColor(hex) {
                return hex ? this.hexToRgbA(hex, '0.9') : ''
            }
        }
    })
</script>