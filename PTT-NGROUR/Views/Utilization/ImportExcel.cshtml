@section style{
    <style>
        #ModalLoading{
            height: 100%;
        }

        .full-screen {
            width: 100%;
            height: 100%;
            margin: 0;
            top: 0;
            left: 0;
        }

        .cell-right {
            min-height: 10em;
            display: table-cell;
            vertical-align: middle;
            text-align: right;
            padding-right: 5px;
        }

        .animationload {    
            height: 100%;
            left: 0;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 10000;
        }
.osahanloading {
    animation: 1.5s linear 0s normal none infinite running osahanloading;
    background: rgba(200,200,200,1) none repeat scroll 0 0;
    border-radius: 25px;
    height: 25px;
    left: 50px;
    margin-left: -25px;
    margin-top: -25px;
    position: absolute;
    top: 50%;
    width: 25px;
}
.osahanloading::after {
    animation: 1.5s linear 0s normal none infinite running osahanloading_after;
    border-color: rgba(200,200,200,1) transparent;
    border-radius: 25px;
    border-style: solid;
    border-width: 10px;
    content: "";
    height: 50px;
    left: -10px;
    position: absolute;
    top: -10px;
    width: 50px;
}
@("@")keyframes osahanloading {
0% {
    transform: rotate(0deg);
}
50% {
    background: white none repeat scroll 0 0;
    transform: rotate(180deg);
}
100% {
    transform: rotate(360deg);
}
}

        

    </style>
}


@section scripts{


    <script>
        //show Data Excel//
        $(function () {
            $('input[type="file"]').change(function (e) {
                debugger

                var filename = e.target.files[0].name;
                var Files = $("#fileLoadDoc").get(0);


                // $("#btnsbmt").trigger("click");
                formdata = new FormData();
                for (var i = 0; i < e.target.files.length; i++) {
                    formdata.append(e.target.files[i].name, e.target.files[i]);
                }
                $.ajax({
                    url: '@Url.Action("UploadFile")',
                    type: "POST",
                    datatype: "JSON",
                    contentType: false,
                    processData: false,
                    data: formdata,
                    success: function (result) {
                        debugger
                        var count = 0;
                        if (result != null) {
                            debugger
                            $("#message").css('color', 'b3b3b3').text("Your File has succesfully Loaded !!!")
                            $(".head").empty();
                            $(".body").empty();
                            for (var i = 0; i < result.row - 6; i++) {
                                if (i == 0) {
                                    $(".head").append("<tr>");
                                }
                                else if (i > 2) {
                                    $(".body").append("<tr class='tr" + i + "'>");
                                }
                                for (var j = 0; j < result.col; j++) {
                                    if (i == 2) {
                                        $(".head tr").append("<th>" + result.data[count] + "</th>");
                                    }
                                    else if (i > 2) {

                                        if (result.data[count] != null) {
                                            $(".body .tr" + i + "").append("<td>" + result.data[count] + "</td>");
                                        }
                                        else {
                                            $(".body .tr" + i + "").append("<td></td>");
                                        }

                                    }
                                    count++;
                                }
                                if (i == 2) {
                                    $(".head").append(" </tr>");

                                }
                                else {
                                    $(".body .tr" + i + "").append("</tr>");
                                }
                            }
                        }
                        else {
                            $("#message").css('color', 'red').text("Your File has failed to Loaded try again!!!")
                        }
                    }
                })
            });
        });
