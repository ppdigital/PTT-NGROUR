<style>
    .table > tbody > tr > th {
        vertical-align: middle !important;
    }

    .table > thead > tr > th {
        vertical-align: middle !important;
    }

    .chart-container {
        position: relative;
        margin: auto;
        height: 80vh;
        width: 80vw;
